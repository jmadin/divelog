<%= form_for(@trip) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

  <div class="form-group">
    <%= f.label :trip_name %><br>
    <%= f.text_field :trip_name, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :trip_organistion %><br>
    <%= f.text_field :trip_organistion, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :trip_category %><br>
    <%= f.select :trip_category, ['Research', 'Training', 'Personal'], class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :start_date %><br>
    <%= f.date_select :start_date, :start_year => 2000, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :end_date %><br>
    <%= f.date_select :end_date, :start_year => 2000, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :description %><br>
    <%= f.text_area :description, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :udo %><br>
    <%= f.select :udo, User.all.collect {|a| [a.name, a.id]}, {:include_blank => true}, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :udo_signed %><br>
    <%= f.check_box :signed, class: "form-control" %>
  </div>

  <%= f.submit "Submit", class: "btn btn-lg btn-primary" %>

<% end %>
